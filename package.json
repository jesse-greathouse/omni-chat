{
  "name": "omni-chat",
  "version": "1.0.0",
  "description": "A Multi Platform IRC Chat Client",
  "main": "main.js",
  "type": "module",
  "build": {
    "appId": "com.example.omni-chat",
    "mac": { "icon": "build/icons/omnichat.icns" },
    "win": { "icon": "build/icons/icon.ico" },
    "linux": { "icon": "build/icons/png" },
    "extraResources": [
      { "from": "bin/", "to": "bin/" },
      { "from": "build/icons/png", "to": "icons/png" }
    ]
  },
  "scripts": {
    "start": "electron .",
    "pack:win": "electron-packager . OmniChat --platform=win32 --arch=x64 --out=.dist --overwrite --asar --icon=build/icons/icon.ico --extra-resource=bin",
    "pack:mac": "electron-packager . OmniChat --platform=darwin --arch=x64,arm64 --out=.dist --overwrite --asar --icon=build/icons/omnichat.icns --extra-resource=bin --extra-resource=build/icons/png",
    "pack:linux": "electron-packager . OmniChat --platform=linux --arch=x64,arm64 --out=.dist --overwrite --asar --icon=build/icons/png/icon.png --extra-resource=bin",
    "start:verbose": "ELECTRON_ENABLE_LOGGING=1 electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint:encoding": "node scripts/check-encoding.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jesse-greathouse/omni-chat.git"
  },
  "keywords": ["Chat", "IRC", "Client"],
  "author": "Jesse Greathouse <jesse.greathouse@gmail.com>",
  "license": "MIT",
  "bugs": { "url": "https://github.com/jesse-greathouse/omni-chat/issues" },
  "homepage": "https://github.com/jesse-greathouse/omni-chat#readme",
  "devDependencies": {
    "electron": "^38.0.0",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "electron-store": "^10.1.0"
  }
}
